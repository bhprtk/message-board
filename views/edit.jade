extends ./layout.jade

block content
  .container
    
    form#edit-form
      .form-group
        label(for='name') Name
        input#edit-name.form-control(type='text', placeholder='Name' required)
      .form-group
        label(for='topic') Topic
        input#edit-topic.form-control(type='text', placeholder='Topic' required)
      .form-group
        label(for='image') Image URL
        input#edit-image.form-control(type='text', placeholder='Image URL')
        .form-group
          label(for='message') Message
          textarea#edit-message.form-control(type='text', placeholder='Message' required)
        button.btn.btn-default(type='submit', href='/messages') Submit
